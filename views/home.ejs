<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }
    </style>
  </head>
  <body>
    <h1>URL Shortener</h1>
    <% if (locals.id) { %>
    <p>URL Generated: http://localhost:8000/url/<%=id%></p>
    <% } %>
    <div>
      <form method="POST" action="/url/">
        <label>Enter Original URL</label>
        <input
          type="text"
          name="url"
          placeholder="https://example.com/lorem_ipsum"
        />
        <button type="submit">Generate</button>
      </form>
    </div>
    <% if (locals.urls) { %>
    <table border="1">
      <thead>
        <th>Sr.</th>
        <th>ShortID</th>
        <th>Redirect URL</th>
        <th>Clicks</th>
      </thead>
      <tbody>
        <% urls.forEach((url,index) => { %>
        <tr>
          <td><%= index+1 %></td>
          <td>
            <a
              target="_blank"
              href="http://localhost:8000/url/<%= url.shortId %>"
              ><%= url.shortId %></a
            >
          </td>
          <td><%= url.redirectURL %></td>
          <td><%= url.visitHistory.length %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
  </body>
</html>
